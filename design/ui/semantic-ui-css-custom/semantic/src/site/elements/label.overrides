/*------------------
    Text Label
-------------------*/

.ui.label.text {
  display: inline;
  font-size: 1em;
  padding: 0;
  background: none;
  font-weight: 400;
  line-height: 1em;
  vertical-align: baseline !important;
  margin: 0 .25em 0 0 !important;
  
  &:after {
    content: ":";
  }
}


/*------------------
  Form Label Group
-------------------*/

.ui.form {
  .ui.labels {
    padding: 0.375em .5em 0;
    border: 1px solid rgba(0,0,0,.05);
    border-radius: @borderRadius;
  }
}

/*------------------
 Button Group Label
-------------------*/

.ui.buttons {
  .ui.button {
    .ui.label {
      position: relative;
      margin: -.5em 0 -.5em .5em !important;
    }
  }
}


/*******************************
Espressive Site Overrides
*******************************/

/*------------------
   Floating Label
-------------------*/

@floatingLabelModifier: .75;

.ui.floating.label {
  text-shadow: none;
  border-radius: 2em;
  padding: (@verticalPadding * @floatingLabelModifier) (@horizontalPadding * @floatingLabelModifier);
  
  top: @floatingTopOffset;
  right: @floatingLeftOffset;
  left: auto;
  margin: 0 !important;
  
  &.bottom {
    top: auto;
    bottom: @floatingTopOffset;
  }
}


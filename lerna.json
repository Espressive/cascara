{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "ignoreChanges": [
    "**/*.fixture.js",
    "**/*.md",
    "**/*.mdx",
    "**/*.test.js",
    "**/*.test.snap"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": "main"
    },
    "version": {
      "message": "chore(release): publish",
      "allowBranch": ["develop", "main"]
    }
  }
}

{
  "name": "cascara",
  "version": "1.0.0",
  "description": "Espressive's Functional Design System",
  "repository": "https://github.com/Espressive/cascara.git",
  "author": "Brian Espinosa <brian@espressive.com>",
  "private": true,
  "engines": {
    "node": "^14.5.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "configs/*",
      "design/**/*"
    ]
  },
  "dependencies": {
    "docz": "2.3.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "app-admin": "yarn --cwd apps/admin start",
    "app-main": "yarn --cwd apps/main start",
    "cosmos": "npx react-cosmos",
    "docz:start": "rm -rf .docz && docz dev",
    "docz:build": "docz build && echo 'User-agent: *\nDisallow: /' > build/docs/robots.txt",
    "docz:serve": "docz build && docz serve",
    "framer:publish": "dotenv npx framer-cli publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./"
  },
  "devDependencies": {
    "@babel/core": "7.11.0",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-optional-chaining": "7.11.0",
    "@babel/plugin-transform-modules-commonjs": "7.10.4",
    "@babel/plugin-transform-runtime": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@rollup/plugin-babel": "5.1.0",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.7",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-jest": "26.2.2",
    "babel-preset-espressive": "*",
    "eslint": "7.5.0",
    "eslint-config-espressive": "*",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "history": "5.0.0",
    "husky": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.2.2",
    "jest-junit": "11.1.0",
    "lint-staged": "10.2.11",
    "node-sass": "4.14.1",
    "normalize.css": "8.0.1",
    "prettier": "2.0.5",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "react-test-renderer": "16.13.1",
    "rollup": "2.23.0",
    "rollup-plugin-postcss": "3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "license": "CC0-1.0"
}

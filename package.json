{
  "license": "MIT",
  "name": "fds-monorepo",
  "version": "1.0.0",
  "description": "Test repository to show some use cases within a monorepo using React Cosmos.",
  "repository": "https://github.com/Espressive/fds-monorepo.git",
  "author": "Brian Espinosa <brian@espressive.com>",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "design/**/*"
    ]
  },
  "dependencies": {
    "docz": "2.3.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "app-admin": "yarn --cwd apps/admin start",
    "app-main": "yarn --cwd apps/main start",
    "cosmos": "npx react-cosmos",
    "docz:start": "rm -rf .docz && docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve",
    "framer:publish": "dotenv npx framer-cli publish"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "main": "dist/index.js",
  "peerDependencies": {},
  "framer": {
    "displayName": ""
  }
}
